{% extends "base.twig" %}

{% block content %}
<div class="reports-dashboard">
    <h1>Relatórios</h1>
    
    <div class="report-options">
        <form action="/reports/generate" method="GET">
            <div class="form-group">
                <label>Tipo de Relatório</label>
                <select name="type" required>
                    <option value="maintenance">Manutenções</option>
                    <option value="efficiency">Eficiência de Máquinas</option>
                </select>
            </div>

            <div class="form-group">
                <label>Período</label>
                <input type="date" name="start_date" value="{{ 'now'|date_modify('-30 days')|date('Y-m-d') }}">
                <input type="date" name="end_date" value="{{ 'now'|date('Y-m-d') }}">
            </div>

            <div class="form-group">
                <label>Formato</label>
                <select name="format">
                    <option value="html">Visualizar na Web</option>
                    <option value="pdf">Exportar PDF</option>
                </select>
            </div>

            <button type="submit" class="btn-primary">Gerar Relatório</button>
        </form>
    </div>
</div>
{% endblock %}
